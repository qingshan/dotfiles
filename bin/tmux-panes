#!/bin/bash

tmux list-windows -a -F '#{session_name}:#{window_index}|#{window_name}' \
        | column -s '|' -t \
        | fzf --reverse --cycle --preview-window right:75% --preview='echo {} | cut -d " " -f 1 | xargs tmux capture-pane -p -e -N -t' \
        | cut -d ' ' -f 1 \
        | xargs tmux switch-client -t
